
let power = \a \b {
   if (b /= 0) then {
      let pom = \ta \tb \b {
         if b > 1 then
            pom (ta * ta)
                (if b mod 2 /= 0 then tb * ta else tb)
                (b div 2)
         else
            ta * tb
      };
      pom a 1 b
   } else {
      1
   }
};

print (power 3 4);
print (power 2 16);
print (power 5 7);

