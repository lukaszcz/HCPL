
// call by name test

let g = \#x { print x; g };

let f0 = \#x \!y {
   if = x 0 then
      y
   else {
      print 1;
      f0 (- x 1) (y 0)
   }
};

let f1 = \#x \#y {
   if = x 0 then
      y
   else {
      print 1;
      f1 (- x 1) (y 0)
   }
};

let h = \#x { print 7; print x; + x x; };
let he = \!x { print 7; print x; + x x; };

f0 5 g;
print 7;
f1 5 g;
print (h {print 2; 3});
print (he {print 2; 3});
print (he #{print 2; 3});

let! x = {print 8; 9};
print (h x);

let# y = {print 8; 9};
print (h y);

print (h {print 8; 9});
