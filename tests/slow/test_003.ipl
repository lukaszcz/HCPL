
let power = \x \y {
   let aux = \x \y \acc {
      if y = 0 then
         acc
      else
         aux x (y - 1) (x * acc)
   };
   aux x y 1
};

let sqrt = \x {
   let aux = \x \top \bot {
      if top - bot <= 1 then
         bot
      else
         let y = (top + bot) div 2
         in
         if y * y > x then
            aux x y bot
         else
            aux x top y
   };
   aux x (x + 1) 0
};

let log = \x \y {
   let aux = \x \y \acc {
      if y = 1 then
         acc
      else
         aux x (y div x) (acc + 1)
   };
   aux x y 0
};

let fast_power = \x \y {
   let aux = \x \y \acc {
      if y = 0 then
         acc
      else if y mod 2 = 1 then
         aux (x * x) (y div 2) (x * acc)
      else
         aux (x * x) (y div 2) acc
   };
   aux x y 1
};

let loop = \x \n {
   if n = 0 then
      x
   else if n mod 2 = 0 then
      loop (power x 4) (n - 1)
   else
      loop (sqrt (sqrt x)) (n - 1)
};

print (loop 13 1000000);
print (loop (power 13 4) 1000001);

let loop2 = \x \n {
   if n = 0 then
      x
   else if n mod 2 = 0 then
      loop2 (fast_power 3 x) (n - 1)
   else
      loop2 (log 3 x) (n - 1)
};

print (fast_power 3 17);
print (loop2 17 1000000);
print (loop2 (power 3 17) 1000001);
